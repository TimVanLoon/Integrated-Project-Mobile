<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.keiichi.project_mobile.Contacts.AddContactActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="50dp">
        <!--Put form controls here-->

        <TextView
            android:id="@+id/addContactTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addContactTitle"
            android:textStyle="bold"
            android:textSize="15pt">
        </TextView>

        <TextView
            android:id="@+id/nameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameTitle"
            android:textStyle="bold"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/firstNameInput"
            android:layout_height="wrap_content"
            android:hint="@string/nameInput"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/lastNameInput"
            android:layout_height="wrap_content"
            android:hint="@string/lastNameInput"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailTitle"
            android:textStyle="bold"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/emailInput"
            android:layout_height="wrap_content"
            android:hint="@string/emailInput"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <TextView
            android:id="@+id/phoneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phoneTitle"
            android:textStyle="bold"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/phoneInput"
            android:layout_height="wrap_content"
            android:hint="@string/phoneInput"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>


        <TextView
            android:id="@+id/workTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workTitle"
            android:textStyle="bold"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/jobTitle"
            android:layout_height="wrap_content"
            android:hint="@string/jobTitle"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/department"
            android:layout_height="wrap_content"
            android:hint="@string/department"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/companyName"
            android:layout_height="wrap_content"
            android:hint="@string/companyName"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/officeLocation"
            android:layout_height="wrap_content"
            android:hint="@string/officeLocation"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/manager"
            android:layout_height="wrap_content"
            android:hint="@string/manager"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/assistantName"
            android:layout_height="wrap_content"
            android:hint="@string/assistantName"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <TextView
            android:id="@+id/addressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addressTitle"
            android:textStyle="bold"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/streetName"
            android:layout_height="wrap_content"
            android:hint="@string/streetName"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/postalCode"
            android:layout_height="wrap_content"
            android:hint="@string/postalCode"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/cityName"
            android:layout_height="wrap_content"
            android:hint="@string/cityName"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/stateName"
            android:layout_height="wrap_content"
            android:hint="@string/stateName"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/countryName"
            android:layout_height="wrap_content"
            android:hint="@string/countryName"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>


        <TextView
            android:id="@+id/nickNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nickNameTitle"
            android:textStyle="bold"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/nickName"
            android:layout_height="wrap_content"
            android:hint="@string/nickName"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <TextView
            android:id="@+id/spouseNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spouseNameTitle"
            android:textStyle="bold"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/spouseName"
            android:layout_height="wrap_content"
            android:hint="@string/spouseName"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <TextView
            android:id="@+id/birthdayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthdayTitle"
            android:textStyle="bold"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/birthday"
            android:layout_height="wrap_content"
            android:hint="@string/birthday"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <TextView
            android:id="@+id/notesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notesTitle"
            android:textStyle="bold"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/personalNotes"
            android:layout_height="200dp"
            android:hint="@string/personalNotes"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

    </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
